@model IEnumerable<Product>

<h2>Products by SubCategory</h2>

@if (Model.Count() == 0)
{
    <p>No products found for the selected Subcategory.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Brand</th>
                <th>CatId</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model)
            {
            <tr>
                <td>@products.Id</td>
                <td>@products.Name</td>
                <td>@products.Brand</td>
                <td>@products.CatId</td>

            </tr>
            }
        </tbody>
    </table>
}