@model ProductViewModel

@{
    ViewData["Title"] = "Product Details";
    string imagePath = string.Empty;
    if (Model.Profile == null)
    {
        imagePath = "/images/img.jpg";
    }
    else
    {
        imagePath = "/images/" + Model.Profile;
    }
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card h-100 shadow">
                <img src="@imagePath" class="card-img-top h-50" alt="image not found" />
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <hr class="my-2" />
                    <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                    <p class="card-text"><strong>SubCategory:</strong> @Model.SubCategory</p>
                    <p class="card-text"><strong>Price:</strong> @Model.Rate</p>
                    <p class="card-text"><strong>Company:</strong> @Model.Brand</p>
                    <p class="card-text"><strong>Generation:</strong> @Model.Generation</p>
                    <p class="card-text"><strong>Sim:</strong> @Model.Sims</p>
                    <p class="card-text"><strong>Version:</strong> @Model.OS</p>
                    <p class="card-text"><strong>Ram:</strong> @Model.RAM</p>
                    <p class="card-text"><strong>Rom:</strong> @Model.ROM</p>
                    <p class="card-text"><strong>Color:</strong> @Model.Color</p>
                </div>
            </div>
        </div>
    </div>
</div>
