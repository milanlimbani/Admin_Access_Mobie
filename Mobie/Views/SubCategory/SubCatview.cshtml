@model IEnumerable<SubCategory>

<h2>Subcategories by Category</h2>

@if (Model.Count() == 0)
{
    <p>No subcategories found for the selected category.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>CatId</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var subCategory in Model)
            {
                <tr>
                    <td>@subCategory.Id</td>
                    <td>@subCategory.Name</td>
                    <td>@subCategory.CatId</td>
                   
                </tr>
            }
        </tbody>
    </table>
}